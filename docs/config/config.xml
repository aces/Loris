            <link>user_accounts</link>
            <label>User Accounts</label>
            <access>all</access>
            <permissions>
                <perm>user_accounts</perm>
            </permissions>
            <visible>1</visible>
        </tab>
          <tab>
            <link>statistics</link>
            <label>Database Statistics</label>
            <access>all</access>
           <permissions>
