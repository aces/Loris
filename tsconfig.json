{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "core/*": ["jslib/core/*"],
      "entities/*": ["jslib/entity/*"],
      "*": ["*", "jsx/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "es6", "dom", "es2017"
    ],
    "strict" : true,
  }
}
