{
  "parser": "@babel/eslint-parser",
  "plugins": [
    "react",
    "no-jquery",
    "jsdoc"

  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "jsdoc": {
      "tagNamePreference": {
        "return": "return",
        "tag constructor": "constructor"
      },
      "preferredTypes": {
        "Function": "function",
        "function": "Function",
        "Array": "array",
        "array": "Array"
      }
    }
  },
  "env": {
    "browser": true,
    "jquery": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": false
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsdoc/recommended",
    "google"
  ],
  "rules": {
    "max-len": ["error", {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true
    }],
    "no-useless-escape": "off",
    "no-dupe-keys": "off",
    "react/no-direct-mutation-state": "off",
    "react/jsx-no-target-blank": "off",
    "react/no-unknown-property": "off",
    "react/no-find-dom-node": "off",
    "no-empty": "off",
    "no-redeclare": "off",
    "no-inner-declarations": "off",
    "react/no-unescaped-entities": "off",
    "react/no-deprecated": "off",
    "react/no-string-refs": "off",
    "no-case-declarations": "off",
    "no-fallthrough": "off",
    "react/jsx-no-undef": "off",
    "react/prop-types": "off",
    "no-undef": "error",
    "react/jsx-key": "off",
    "no-extra-semi": "off",
    "no-prototype-builtins": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prefer-rest-params": "error",
    "array-callback-return": "off",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "no-implicit-globals": "off",
    "no-invalid-this": "off",
    "no-alert": "off",
    "new-cap": ["error", {
      "capIsNewExceptions": ["DynamicTable"]
    }],
    "no-console": ["warn", {
      "allow": ["info", "warn", "error"]
    }],
    "jsdoc/require-param-description": "off",
    "jsdoc/require-returns": "off",
    "jsdoc/require-returns-description": "off"
  },
  "overrides": [
    {
      "files": "**/*.+(ts|tsx)",
      "plugins": ["@typescript-eslint"],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "jsdoc/require-jsdoc": [
          "error",
          {"require": {
            "ArrowFunctionExpression": true,
            "FunctionExpression": true,
            "ClassDeclaration": true,
            "MethodDefinition": true
          }}
        ],
        "jsdoc/require-param-description": "error",
        "jsdoc/require-returns": "error",
        "jsdoc/require-returns-description": "error",
        "no-undef": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": [
        "*.js", "*.jsx", "*.ts", "*.tsx", "*.tpl"
      ],
      "rules": {
        "no-jquery/no-other-utils": "error",
        "no-jquery/no-jquery-constructor": "error",
        "no-jquery/no-ajax": "error",
        "no-jquery/no-extend": "error"
      }
    },
    {
      "files": [
        "modules/candidate_parameters/**",
        "modules/dqt/**",
        "modules/configuration/jsx/configuration_helper.js",
        "htdocs/js/advancedMenu.js",
        "htdocs/js/filterControl.js",
        "htdocs/js/helpHandler.js",
        "htdocs/js/instrument_controlpanel_control.js",
        "htdocs/js/instrument_form_control.js",
        "htdocs/js/invalid_form_scroll.js",
        "htdocs/js/jquery.csv.js",
        "htdocs/js/jquery.dynamictable.js",
        "htdocs/js/jquery.fileupload.js",
        "htdocs/js/loris.js",
        "htdocs/js/polyfills.js",
        "jsx/DataTable.js",
        "jsx/DynamicDataTable.js",
        "jsx/Form.js",
        "jsx/StaticDataTable.js",
        "jsx/Tabs.js"
      ],
      "rules": {
        "no-jquery/no-other-utils": "off",
        "no-jquery/no-jquery-constructor": "off",
        "no-jquery/no-ajax": "off",
        "no-jquery/no-extend": "off"
      }
    }
  ],
  "globals": {
    "React": true,
    "ReactDOM": true,
    "loris": true,
    "QueryString": true,
    "swal": true,
    "schema_urls": true,
    "JSX": true
  }
}
