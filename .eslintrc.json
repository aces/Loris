{
  "extends": "google",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": false
    }
  },
  "rules": {
    "extends": ["eslint:recommended", "plugin:react/recommended", "google"],
    "max-len": [1, 80, 2, {"ignoreComments": true}],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prefer-rest-params": "warn",
    "array-callback-return": 0,
    "require-jsdoc": "warn",
    "no-implicit-globals": 0,
    "no-invalid-this": 0,
    "no-alert": 0,
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        },
        "SwitchCase": 1
      }
    ],
    "new-cap": ["error", {
      "capIsNewExceptions": ["DynamicTable"]
    }],
    "no-console": ["error", {
      "allow": ["info", "warn", "error"]
    }]
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "loris": true,
    "QueryString": true,
    "swal": true
  }
}
