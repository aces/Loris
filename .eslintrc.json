{
  "extends": "google",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": false
    }
  },
  "rules": {
    "extends": ["eslint:recommended", "plugin:react/recommended", "google"],
    "max-len": ["error", {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true
    }],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prefer-rest-params": "error",
    "array-callback-return": "off",
    "require-jsdoc": "error",
    "no-implicit-globals": "off",
    "no-invalid-this": "off",
    "no-alert": "off",
    "new-cap": ["error", {
      "capIsNewExceptions": ["DynamicTable"]
    }],
    "no-console": ["warn", {
      "allow": ["info", "warn", "error"]
    }]
  },
  "overrides": [
    {
      "files": [
        "modules/acknowledgements/**",
        "modules/behavioural_qc/**",
        "modules/brainbrowser/**",
        "modules/bvl_feedback/**",
        "modules/candidate_list/**",
        "modules/candidate_parameters/**",
        "modules/configuration/**",
        "modules/conflict_resolver/**",
        "modules/datadict/**",
        "modules/data_release/**",
        "modules/dicom_archive/**",
        "modules/document_repository/**",
        "modules/electrophysiology_browser/**",
        "modules/examiner/**",
        "modules/genomic_browser/**",
        "modules/help_editor/**",
        "modules/imaging_browser/**",
        "modules/imaging_qc/**",
        "modules/imaging_uploader/**",
        "modules/instrument_builder/**",
        "modules/instrument_manager/**",
        "modules/issue_tracker/**",
        "modules/media/**",
        "modules/module_manager/**",
        "modules/new_profile/**",
        "modules/publication/**",
        "modules/survey_accounts/**"
      ],
      "rules": {
        "require-jsdoc": "warn"
      }
    }
  ],
  "globals": {
    "React": true,
    "ReactDOM": true,
    "loris": true,
    "QueryString": true,
    "swal": true
  }
}
