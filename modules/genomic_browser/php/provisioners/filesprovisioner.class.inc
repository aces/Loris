class FilesProvisioner extends \LORIS\Data\Provisioners\DBObjectProvisioner
{
    /**
     * Create a RowProvisioner
     */
    function __construct()
    {
        parent::__construct(
            "
            SELECT
                GenomicFileID,
                FileName,
                Description,
                FileType,
                Date_inserted,
                InsertedByUserID,
                Caveat,
                Notes
            FROM
                genomic_files
            WHERE
                1 = 1
            ",
            array(),
            '\LORIS\genomic_browser\Models\FilesDTO'
        );
    }
    /**
     * Creates a new provisioner with user-specific filter.
     *
     * @param \User $user The requesting user
     *
     * @return FilesProvisioner
     */
    public function forUser(\User $user): FilesProvisioner
    {
        $new = clone($this);
        if (!$user->hasPermission('access_all_profiles')) {
            $new = $new->filter(
                new \LORIS\Data\Filters\UserSiteMatch()
            );
        }
        return $new;
    }
}
